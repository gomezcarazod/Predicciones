@model IEnumerable<CompeTournament.Backend.Data.Entities.League>
@{
    ViewData["Title"] = "Leagues";
}

<h2>Liga, Asociacion, Federacion</h2>


<p>
    <a class="btn btn-success" asp-action="Index">
        <span class="fa fa-plus"></span>
        Regresar al Listado
    </a>
    <a class="btn btn-primary" asp-action="CreateLeague" asp-route-id="@Model.FirstOrDefault().Id">
        <span class="fa fa-plus"></span>
        Registrar Liga, Asociacion o Federacion
    </a>
</p>
@if (Model.Count() == 0)
{
    <div>
        No tienes ligas, asociaciones o federaciones registradas para este torneo, prueba agregando algunas
    </div>
}
else
{
    <table>
        <thead>
            <tr>
                <th>
                    Nombre
                </th>

                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        <a class="btn btn-info" asp-action="DetailsLeague" asp-route-id="@item.Id">
                            <span class="fa fa-plus"></span>
                            Ver Equipos
                        </a>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                            <span class="fa fa-plus"></span>
                            Modificar
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <span class="fa fa-plus"></span>
                            Eliminar
                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}

